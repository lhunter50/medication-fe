{
  "compilerOptions": {
    "target": "ES2020",               
    "lib": ["DOM", "DOM.Iterable", "ES2020"], 
    "module": "ESNext",               
    "moduleResolution": "Node",      
    "jsx": "react-jsx",              
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true                   
  },
  "include": ["src"]
}
